---
layout: layouts/base.liquid
pagination:
  data: collections
  size: 1
  alias: tag
permalink: "tags/{{ tag }}/"
eleventyComputed:
  title: Posts Tagged “{{ tag }}”
---

{% include "layouts/tag-cloud.liquid" %}

<h1>Posts Tagged “{{ tag }}”</h1>
<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
    </tr>
  </thead>
  <tbody>
    {%- for post in collections[tag] reversed -%}
      <tr>
        <td>
          <strong>
            {{ post.data.date | postDate }}
          </strong>
        </td>
        <td>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </td>
      </tr>
    {%- endfor -%}
  </tbody>
</table>