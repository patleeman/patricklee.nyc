<h2 class="title">Posts</h2>
<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
    </tr>
  </thead>
  <tbody>
    {%- for post in posts -%}
      <tr>
        <td>
          <strong>
            {{ post.data.date | postDate }}
          </strong>
        </td>
        <td>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </td>
      </tr>
    {%- endfor -%}
  </tbody>
</table>

<nav
  class="pagination is-small"
  role="navigation"
  aria-label="pagination">
  {% if pagination.href.previous %}
    <a class="pagination-previous" href="{{ pagination.href.previous }}">Newer Posts</a>
  {% else %}
    <span></span>
  {% endif %}

  {% if pagination.href.next %}
    <a class="pagination-next" href="{{ pagination.href.next }}">Older Posts</a>
  {% endif %}
</nav>