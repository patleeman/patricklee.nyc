<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
    </tr>
  </thead>
  <tbody>
    {%- for post in collections.post reversed -%}
      <tr>
        <td>
          <strong>
            {{ post.data.date | postDate }}
          </strong>
        </td>
        <td>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </td>
      </tr>
    {%- endfor -%}
  </tbody>
</table>